<Window
    CanResize="False"
    Height="450"
    Title="{Binding Title}"
    Width="800"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="TBGL.Views.TransactionHistoryListWindow"
    x:DataType="vm:TransactionHistoryListWindowViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TBGL.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataGrid
        BorderBrush="Black"
        BorderThickness="1"
        IsReadOnly="True"
        ItemsSource="{Binding TransactionHistories}"
        Margin="20">
        <DataGrid.Columns>
            <DataGridTextColumn Width="Auto" Header="G/L Account" Binding="{Binding Metadata}"/>
            <DataGridTextColumn Width="Auto" Header="Starting Balance" Binding="{Binding StartingBalance, StringFormat='{}{0:C}'}"/>
            <DataGridTextColumn Width="Auto" Header="Ending Balance" Binding="{Binding EndingBalance, StringFormat='{}{0:C}'}"/>
            <DataGridTemplateColumn Width="*" Header="Details">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <Button HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                Content="View"
                                Command="{Binding $parent[DataGrid].((vm:TransactionHistoryListWindowViewModel)DataContext).ShowDetailsCommand}"
                                CommandParameter="{Binding}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
        </DataGrid.Columns>
    </DataGrid>
</Window>
